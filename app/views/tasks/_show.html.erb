<div class="row">
  <div class="col-sm-4">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Task Name</strong>
      <%= @task.name %>
    </p>

    <p>
      <strong>Task Details:</strong>
      <%= @task.details %>
    </p>

    <p>
      <strong>Due Date</strong>
      <%= @task.due_date %>
    </p>

    <p>
      <strong>Task Status</strong>
      <%= @task.status %>
    </p>

    <%= link_to 'Create Comment', new_comment_path(task_id: @task.id) %><br><br>
  </div>

  <div class="col-sm-8">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><h3>Comments</h3></th>
        </tr>
      </thead>
      <% @task.comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.body, comment %></td><br>
      </tr>
    <% end %>
    </table>
  </div>
</div>
