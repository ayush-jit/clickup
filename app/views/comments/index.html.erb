<div class="row">
  <div class="col-sm-6">
    <div class="well well-sm">
      <h3>Comments
      <div class="pull-right">
        <a href="comments/new">
          <span class="glyphicon glyphicon-plus"></span>
        </a>
      </div></h3>
    </div>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Comments</th>
          </tr>
        </thead>

        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <td><%= link_to comment.body, comment %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </table>
  </div>
</div>
