<div class="row">
  <div class="col-sm-8">
    <div class="well well-sm"><h3>Projects
      <div class="pull-right">
        <a href="projects/new">
          <span class="glyphicon glyphicon-plus"></span>
        </a>
      </div></h3>
    </div>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Project Name</th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
          <tr>
            <td><%= link_to project.title.capitalize, project %></td>
            <td><%= link_to project.description, project %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </table>
  </div>
</div>
